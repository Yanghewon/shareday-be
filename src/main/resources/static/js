function shareDate() {
    const dateText = document.querySelector(".date").innerText;

    // 클립보드에 날짜 복사
    navigator.clipboard.writeText(dateText).then(() => {
        alert("날짜가 클립보드에 복사되었습니다! 친구에게 공유하세요.");
    }).catch(err => {
        console.error("날짜 복사 실패:", err);
        alert("날짜를 복사하는 데 실패했습니다.");
    });
}
